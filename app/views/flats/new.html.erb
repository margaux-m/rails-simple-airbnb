<h2>Add a new flat</h2>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :number_of_guests, collection: (0..60) %>
  <%= f.input :price_per_night, collection: (0..10000) %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
