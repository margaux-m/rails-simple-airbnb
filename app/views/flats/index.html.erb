<h1>All our flats</h1>
<p>All <%= @flats.length %> flats.</p>

<div class="d-flex">
<% @flats.each do |flat| %>
  <div class="flat-card col">
    <img class="flat-card-image" src="" alt="">
    <div class="flat-card-content bg-light">
      <h3><%= flat.name %></h3>
      <p class="mb-3"><%= flat.description %></p>
      <div class="d-flex justify-content-start">
        <div class="d-flex align-items-center mr-3">
          <i class="fas fa-user-friends pr-2"></i>
          <p><%= flat.number_of_guests %></p>
        </div>
        <div class="d-flex align-items-center">
          <i class="fas fa-euro-sign pr-2"></i>
          <p><%= flat.price_per_night %></p>
        </div>
      </div>
    </div>
    <div class="flat-card-actions">
      <%= link_to 'More info', flats_path %>
      <%= link_to 'Edit', flats_path %>
      <%= link_to 'Remove', flats_path %>
    </div>
  </div>
<% end %>
</div>

